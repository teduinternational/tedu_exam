{
  "IdentityServerData": {
    "IdentityResources": [
      {
        "Name": "roles",
        "Enabled": true,
        "DisplayName": "Roles",
        "UserClaims": ["role"]
      },
      {
        "Name": "openid",
        "Enabled": true,
        "Required": true,
        "DisplayName": "Your user identifier",
        "UserClaims": ["sub"]
      },
      {
        "Name": "profile",
        "Enabled": true,
        "DisplayName": "User profile",
        "Description": "Your user profile information (first name, last name, etc.)",
        "Emphasize": true,
        "UserClaims": [
          "name",
          "family_name",
          "given_name",
          "middle_name",
          "nickname",
          "preferred_username",
          "profile",
          "picture",
          "website",
          "gender",
          "birthdate",
          "zoneinfo",
          "locale",
          "updated_at"
        ]
      },
      {
        "Name": "email",
        "Enabled": true,
        "DisplayName": "Your email address",
        "Emphasize": true,
        "UserClaims": ["email", "email_verified"]
      },
      {
        "Name": "address",
        "Enabled": true,
        "DisplayName": "Your address",
        "Emphasize": true,
        "UserClaims": ["address"]
      }
    ],
    "ApiResources": [
      {
        "Name": "exam_api",
        "Scopes": [
          {
            "Name": "exam_api",
            "DisplayName": "exam_api",
            "Required": true,
            "UserClaims": ["role", "name"]
          }
        ]
      }
    ],
    "Clients": [
      {
        "ClientId": "identity_admin",
        "ClientName": "identity_admin",
        "ClientUri": "https://localhost:6003",
        "AllowedGrantTypes": ["authorization_code"],
        "RequirePkce": true,
        "ClientSecrets": [
          {
            "Value": "admin_client_secret"
          }
        ],
        "RedirectUris": ["https://localhost:6003/signin-oidc"],
        "FrontChannelLogoutUri": "https://localhost:6003/signout-oidc",
        "PostLogoutRedirectUris": [
          "https://localhost:6003/signout-callback-oidc"
        ],
        "AllowedCorsOrigins": ["https://localhost:6003"],
        "AllowedScopes": ["openid", "email", "profile", "roles"]
      },
      {
        "ClientId": "exam_api_swaggerui",
        "ClientName": "exam_api_swaggerui",
        "AllowedGrantTypes": ["authorization_code"],
        "RequireClientSecret": false,
        "RequirePkce": true,
        "RedirectUris": ["https://localhost:5002/swagger/oauth2-redirect.html"],
        "AllowedScopes": ["exam_api"],
        "AllowedCorsOrigins": ["https://localhost:5002"]
      }
    ]
  }
}
